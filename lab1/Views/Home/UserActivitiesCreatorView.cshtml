@{
    ViewData["Title"] = "User Activities Creator";
}
<style>
    input {
        display: block;
    }
    label {
        padding: 0px;
        margin: 8px 0px 0px 0px;
    }
    textarea {
        display: block;
    }
    select {
        display: block;
    }
</style>


<p>Here you will be able to create add new user activities.</p>

<br>
<div>
    @{
        if (Model != null && !String.IsNullOrEmpty(Model.User))
        {
            <form method="post" name="activity" asp-controller="Home" asp-action="UserActivitiesCreate">

                <label for="project">Activity</label>
                <select name="project" asp-items="Model.CreateActivitySelectList"></select>

                <label for="date">Date of activity</label>
                <input type="date" id="date" name="date" autocomplete="off" required>

                <label for="time">Time spent [minutes]</label>
                <input type="text" id="time" name="time" autocomplete="off" required min="1">

                <label for="description">Description</label>
                <textarea id="description" name="activity" rows="4" cols="32" placeholder="Enter a short description."></textarea>

                <input type="submit" name="ok" value="Create activity">
            </form>
        }
        else
        {
            <p><i>Only logged users can create new user activities!</i></p>
        }
    }
</div>

<br>
<a asp-area="" asp-controller="Home" asp-action="Index">Go back</a>
