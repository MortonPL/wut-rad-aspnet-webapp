@{
    ViewData["Title"] = "Projects";
}

<style>
    table {
        width:100%;
        border: 1px solid black
    }
    tr:nth-child(even) {
        background-color: #dfdfdf;
    }
    th {
        border: 1px solid grey;
    }
    td {
        vertical-align: top;
        border-left: 1px solid grey;
    }
</style>

<div class="text-center">
    @{
        if (Model != null)
        {
            <h3>Project Model</h3>
            if (Model.Users.Count != 0)
            {
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Total Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p><i>This project has no users!</i></p>
            }
        }
    }
</div>

